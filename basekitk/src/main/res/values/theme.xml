<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="BaseKitThemeAbs" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Цвет подсветки нажатия -->
        <!--<item name="colorControlHighlight">@color/black_owerlay_20</item>-->
        <!--&lt;!&ndash; цвет при клике &ndash;&gt;-->
        <!--<item name="selectableItemBackground">@drawable/basekit_selector_simple</item>-->

        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="KitTheme" parent="BaseKitThemeAbs">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="colorControlNormal">@color/black_owerlay_20</item>-->
        <!-- style button-->
        <!--<item name="android:buttonStyle">@style/uiButton</item>-->
        <!-- dialog theme stuff -->
        <item name="android:datePickerDialogTheme" ns1:ignore="NewApi">@style/KitTeme.DialogTheme</item>
        <!-- styles button-->
        <!--<item name="colorButtonNormal">@color/colorAccent</item>-->
        <!-- Цвет текста на кнопках -->
        <item name="android:textColorPrimary">@color/black_overlay_90</item>

        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="KitTeme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="KitTeme.NoActionBar" parent="KitTheme" />

    <style name="KitTeme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="KitTeme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white_overlay_90</item>
    </style>
</resources>